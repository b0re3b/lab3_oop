<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Звичайний стан шашки -->
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#3C3C3C"/>
            <stroke
                android:width="2dp"
                android:color="#000000"/>
            <gradient
                android:startColor="#3C3C3C"
                android:endColor="#1C1C1C"
                android:angle="270"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Стан натиснутої шашки -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#2C2C2C"/>
            <stroke
                android:width="3dp"
                android:color="#808080"/>
            <gradient
                android:startColor="#2C2C2C"
                android:endColor="#0C0C0C"
                android:angle="270"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</selector>